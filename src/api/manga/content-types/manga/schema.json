{
  "kind": "collectionType",
  "collectionName": "mangas",
  "info": {
    "singularName": "manga",
    "pluralName": "mangas",
    "displayName": "Manga",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Yayınlanmadı",
        "Devam Ediyor",
        "Tamamlandı"
      ],
      "default": "Devam Ediyor",
      "required": true
    },
    "otherNames": {
      "type": "text"
    },
    "year": {
      "type": "date",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "manga_chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::manga-chapter.manga-chapter",
      "mappedBy": "manga"
    },
    "genres": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::genre.genre",
      "mappedBy": "manga"
    },
    "description": {
      "type": "text"
    }
  }
}
